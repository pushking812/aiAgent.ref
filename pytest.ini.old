# .coveragerc
[run]
source = gui
omit = 
    */test_*.py
    */conftest.py
    */__init__.py
    */run_tests.py
    */base_gui_test.py
    */helpers/*
    tests/*
    main.py
    check_*.py
    *.log
    */__pycache__/*
    .*/*

[report]
# Включаем только файлы из gui/
include = 
    */gui/views/*

exclude_lines = 
    pragma: no cover
    def __repr__
    if self.debug:
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    ^\s*pass\s*$
    ^\s*\"\"\".*\"\"\"\s*$

ignore_errors = True
skip_covered = False
show_missing = True
fail_under = 75

[html]
directory = coverage_html
title = AI Code Assistant GUI - Coverage Report